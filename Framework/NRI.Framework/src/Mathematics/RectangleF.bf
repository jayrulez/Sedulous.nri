namespace NRI.Framework.Mathematics;

struct RectangleF
{
	/// <summary>
	/// The x-coordinate of the rectangle's top-left corner.
	/// </summary>
	public float X;

	/// <summary>
	/// The y-coordinate of the rectangle's top-left corner.
	/// </summary>
	public float Y;

	/// <summary>
	/// The rectangle's width.
	/// </summary>
	public float Width;

	/// <summary>
	/// The rectangle's height.
	/// </summary>
	public float Height;
}